  function password($size) 
  { 
    $result = ""; 

    srand((double)microtime()*1000000); 

    for($i=0; $i < $size; $i++) 
    { 
      $num = rand(48,120); 
      while (($num >= 58 && $num <= 64) || ($num >= 91 && $num <= 96)) 
         $num = rand(48,120); 
           
      $result .= chr($num); 
    } 
    return $result; 
  } 
